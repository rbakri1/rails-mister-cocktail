<div class="container text-center">


	<h1>Cocktails</h1>

		
		
		<div class="container">
		  <div class="row">
		    <div class="col-xs-12 col-sm-4">
		    <!-- CARD DISPLAYING COCKTAILS -->
		    	<div class="card">
		    		<h3><%= link_to "Add new cocktail", new_cocktail_path %></h3>
		    		<% @cocktails.each do |cocktail| %>
		    		<%= image_tag cocktail.photo.url(:standard) %>
		    		  <h2><%= cocktail.name %></h2>
		    		  <%= link_to "Show cocktail", cocktail_path(cocktail) %>
		    		<% end %>
		    	</div>
		    </div>
		  </div>
		</div>








</div>



